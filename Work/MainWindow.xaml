<Window x:Class="Work.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid Loaded="Grid_Loaded">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="30">
                <MenuItem Header="登录"  Click="btnLogin_Click" Height="30" FontSize="15">
                </MenuItem>
                <MenuItem Header="管理商品" Height="30" FontSize="15">
                    <MenuItem x:Name="muAdd" Header="添加商品" Click="muAdd_Click">
                        <MenuItem.Icon>
                            <Image Source="hello.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="muDel" Header="删除商品" Click="muDel_Click"/>
                    <MenuItem x:Name="muCha" Header="修改商品" Click="muCha_Click"/>
                </MenuItem>
                <MenuItem Header="刷新"  Click="Button_Click" Margin="420 0 0 0" Height="30" FontSize="15">
                </MenuItem>
            </Menu>
            <!--<ToolBar DockPanel.Dock="Top" Height="30">
                <Button Content="k" Margin="0 0 0 0"></Button>
                <Button Content="laalla" Margin="90 0 0 0"></Button>
            </ToolBar>-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <DataGrid Name="dgTable" 
                          Grid.Column="0" 
                          Grid.ColumnSpan="6" 
                          CanUserAddRows="False" 
                          Grid.RowSpan="4" 
                          RowDetailsVisibilityMode="VisibleWhenSelected" 
                          SelectionMode="Single" 
                          AutoGenerateColumns="False"
                          AlternatingRowBackground="LightGray" 
                          RowHeaderWidth="30"
                          AlternationCount="2">
                    <!--<DataGrid.RowHeaderStyle>
                        <Style TargetType="DataGridRowHeader">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="SkyBlue"/>
                                </Trigger>
                            </Style.Triggers>
                            <Setter Property="Width" Value="15"/>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop  Offset="0"/>
                                        <GradientStop Color="SkyBlue" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.RowHeaderStyle>-->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" >
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <!--当鼠标经过时 改变颜色-->
                                    <Setter Property="Background" Value="SkyBlue"/>
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <!--<DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="White" Offset="0"/>
                                        <GradientStop Color="LightBlue" Offset="0.5"/>
                                        <GradientStop Color="White" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontSize" Value="13" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>-->
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="80" Binding="{Binding id,UpdateSourceTrigger=PropertyChanged}" Header="商品编号" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Width="80" Binding="{Binding height,UpdateSourceTrigger=PropertyChanged}" Header="商品名称" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Width="90" Binding="{Binding weight,UpdateSourceTrigger=PropertyChanged}" Header="商品价格" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Width="80" Binding="{Binding cm,UpdateSourceTrigger=PropertyChanged}" Header="商品库存" IsReadOnly="True"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Name="btnDltSelect" Click="btnDltSelect_Click" Margin="60 10 20 10" Background="LightSkyBlue" Foreground="Red" Content="删除选中商品" Grid.Row="5" Grid.ColumnSpan="2"></Button>
                <Button Name="btnAltSelect" Click="btnAltSelect_Click" Margin="20 10 60 10" Background="LightSkyBlue" Foreground="Red" Content="修改选中商品" Grid.Row="5" Grid.Column="4"  Grid.ColumnSpan="2"></Button>
        </Grid>
        </DockPanel>
    </Grid>
</Window>
